#Arithmetic operation on int vaues:
'''
b1 = int(input("Enter a number : "))
b2 = int(input("Enter another number : "))
print("The sum is ",b1+b2)
print("The difference is ",b1-b2)
print("The product is",b1*b2)
print("The quotient is",b1/b2)
print("The floor quotient is",b1//b2)
print("The remainder is",b1%b2)
print("The power is",b1**b2)
'''
#Arithmetic operation on float and int vaues:
'''
c1 = float(input("Enter a number : "))
c2 = int(input("Enter another number : "))
print("The sum is ",c1+c2)
print("The difference is ",c1-c2)
print("The product is",c1*c2)
print("The quotient is",c1/c2)
print("The floor quotient is",c1//c2)
print("The remainder is",c1%c2)
print("The power is",c1**c2)
'''

#comparision operators
'''
d1 = int(input("Enter a number : "))
d2 = int(input("Enter another number : "))
print("Is d1 =", d1," greter then d2 = ",d2," : ",d1>d2 )
print("Is d1 =", d2," greter then d2 = ",d1," : ",d2>d1 )
'''
#boolean operators
'''
d3 = int(input("Enter a number : "))
d4 = int(input("Enter another number : "))
print("d3==d4")
print(d3==d4)
print("d3<=d4")
print(d3<=d4)
'''
#assignment operator
'''
d5 = int(input("Enter a number : "))
'''

#there is nothing called post or pre increment or decrement in python
'''
x=10
y=20
z = x++ + ++y
z2 = ++x + ++y
print(x)
print(y)
print(z)
print(z2)
'''

#string functions :
'''
e1 = input("Enter a string : ")
e2 = input("Enter another string : ")
print(e1.upper())
print(e1.lower())
print(e1.strip())
print(e1.split(","))
print(e1.replace("M","Mo"))
print(e1+", "+e2)
'''

e3 = "Happy Afternoon"
print(e3[1:4])
print(e3[:4])
print(e3[1:])
print(e3[-3:])
print(e3[3:-3])
print(e3[::2])
print(e3[::-1]) #flip
print(e3[::-2])
